[Unit]
Description={{ application_name|capitalize }}

[Service]
ExecStart=/usr/bin/qemu-system-x86_64 -m 256M -enable-kvm -nic user,hostfwd=tcp:127.0.0.1:8186-:80 -drive file={{ image_dir }}/toils-os.qcow2,index=0,media=disk,format=qcow2 -drive file={{ image_dir }}/toils-app.img,index=1,media=disk,format=raw -drive file={{ image_dir }}/toils-storage.qcow2,index=2,media=disk,format=qcow2  -nographic -monitor telnet:localhost:8286,server,nowait,nodelay
ExecStop=/bin/sh -c "echo 'system_powerdown' | /usr/bin/nc localhost 8286"
TimeoutStopSec=30
KillMode=none

[Install]
WantedBy=multi-user.target
