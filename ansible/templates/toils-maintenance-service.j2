[Unit]
Description=Toils Maintenance

[Service]
Type=oneshot
WorkingDirectory={{ application_root}/{{ application_name }}
ExecStart=/usr/bin/find storage/logs . -maxdepth 1 -mtime +7 -type f -exec /bin/rm {} \;
ExecStart=/usr/bin/php artisan maintenance:prune
StandardOutput=null
Restart=no

